<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ad_open_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:paddingBottom="7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/proximat"
            android:text="Иван, 28"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_received"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5 мин назад"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/hind"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/orientation_and_params"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="Актив, 170/60"
            android:textColor="@color/hind"
            android:fontFamily="@font/roboto_regular"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@+id/name_user" />

        <TextView
            android:id="@+id/data_adds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pfbeausanspro_reg"
            android:paddingBottom="5dp"
            android:text="Если ты живёшь в моём городе, то можно даже встречи в ирл, погулять,сходить на какие нибудь фестивали, в кино.Если тебя не отпугнула информация обо мне,пиши,буду рад общению."
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orientation_and_params" />

        <!-- <View
             android:id="@+id/view_line"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_marginTop="5dp"
             android:background="@color/hind"
             app:layout_constraintTop_toBottomOf="@id/data_adds" />-->

        <ImageView
            android:id="@+id/comment_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_comment"
            app:layout_constraintEnd_toStartOf="@+id/comment_count"
            app:layout_constraintTop_toBottomOf="@+id/data_adds" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/proximat"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/comment_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_adds" />


        <ImageView
            android:id="@+id/locations_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_locations"
            app:layout_constraintEnd_toStartOf="@+id/locations_distance"
            app:layout_constraintTop_toBottomOf="@+id/data_adds" />

        <TextView
            android:id="@+id/locations_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/proximat"
            android:text="6 км"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/comment_icon"
            app:layout_constraintEnd_toStartOf="@+id/comment_icon"
            app:layout_constraintTop_toBottomOf="@+id/data_adds" />

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hind"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/data_adds"/>-->


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ad_open_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:paddingBottom="7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/name_user_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/proximat"
            android:text="Индира, 22"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_received_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5 мин назад"
            android:textColor="@color/hind"
            android:fontFamily="@font/roboto_regular"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/orientation_and_params_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="Актив, 170/60"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/hind"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@+id/name_user_1" />

        <TextView
            android:id="@+id/data_adds_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pfbeausanspro_reg"
            android:paddingBottom="5dp"
            android:text="Если тебя не отпугнула информация обо мне,пиши,буду рад общению."
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orientation_and_params_1" />


        <ImageView
            android:id="@+id/comment_icon_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_comment"
            app:layout_constraintEnd_toStartOf="@+id/comment_count_1"
            app:layout_constraintTop_toBottomOf="@+id/data_adds_1" />

        <TextView
            android:id="@+id/comment_count_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:text="2"
            android:fontFamily="@font/proximat"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/comment_icon_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_adds_1" />

        <ImageView
            android:id="@+id/locations_icon_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_locations"
            app:layout_constraintEnd_toStartOf="@+id/locations_distance_1"
            app:layout_constraintTop_toBottomOf="@+id/data_adds_1" />

        <TextView
            android:id="@+id/locations_distance_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:text="6 км"
            android:fontFamily="@font/proximat"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/comment_icon_1"
            app:layout_constraintEnd_toStartOf="@+id/comment_icon_1"
            app:layout_constraintTop_toBottomOf="@+id/data_adds_1" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>