<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/base_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/nav_menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp" />
    </android.support.v7.widget.Toolbar>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/profil_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/nav_menu_toolbar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/profil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_user_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Динара Исмайлова"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/profile_image_1"
            app:layout_constraintTop_toTopOf="@+id/profile_image_1" />

        <TextView
            android:id="@+id/date_create_ad_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_light"
            android:text="Перейти в профиль"
            android:textColor="@color/hind"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/profile_image_1"
            app:layout_constraintTop_toBottomOf="@+id/name_user_1"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/profil_layout">
        <ImageView
            android:id="@+id/icon_ebit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редактировать"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/icon_ebit"
            app:layout_constraintBottom_toBottomOf="@+id/icon_ebit"
            app:layout_constraintStart_toEndOf="@+id/icon_ebit"/>

        <ImageView
            android:id="@+id/icon_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_settings"
            app:layout_constraintTop_toBottomOf="@+id/icon_ebit" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/icon_setting"
            app:layout_constraintBottom_toBottomOf="@+id/icon_setting"
            app:layout_constraintStart_toEndOf="@+id/icon_setting"/>

        <LinearLayout
            android:id="@+id/setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="80dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/setting">


        <TextView
            android:id="@+id/general_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Общее"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аккаунт"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/confidentiality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Конфеденциальность"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уведомления"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Помощь"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/about_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="О приложений"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="15dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_favorites"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_favorites"
            app:layout_constraintTop_toBottomOf="@+id/setting_container" />

        <TextView
            android:id="@+id/favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Избранное"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/icon_favorites"
            app:layout_constraintBottom_toBottomOf="@+id/icon_favorites"
            app:layout_constraintStart_toEndOf="@+id/icon_favorites"/>


        <ImageView
            android:id="@+id/icon_black_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_black_list"
            app:layout_constraintTop_toBottomOf="@+id/icon_favorites" />

        <TextView
            android:id="@+id/black_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Черный список"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/icon_black_list"
            app:layout_constraintBottom_toBottomOf="@+id/icon_black_list"
            app:layout_constraintStart_toEndOf="@+id/icon_black_list"/>

        <ImageView
            android:id="@+id/icon_payments_transfers"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_payments_transfers"
            app:layout_constraintTop_toBottomOf="@+id/icon_black_list" />

        <TextView
            android:id="@+id/payments_transfers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Платежи и переводы"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@+id/icon_payments_transfers"
            app:layout_constraintBottom_toBottomOf="@+id/icon_payments_transfers"
            app:layout_constraintStart_toEndOf="@+id/icon_payments_transfers"/>
    </android.support.constraint.ConstraintLayout>


    <include layout="@layout/bottom_navigation_view" />

</android.support.constraint.ConstraintLayout>