<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="false"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:duplicateParentState = "true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_ebit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_all_select"
            android:clickable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Общее"
            android:textColor="@color/black"
            android:clickable="false"
            android:fontFamily="@font/pfbeausanspro_reg"
            android:textSize="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_account"/>

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аккаунт"
            android:textColor="@color/black"
            android:fontFamily="@font/pfbeausanspro_reg"
            android:textSize="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_favorites"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_private" />

        <TextView
            android:id="@+id/favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Конфеденциальность"
            android:textColor="@color/black"
            android:fontFamily="@font/pfbeausanspro_reg"
            android:textSize="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_black_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_notifications" />
        <TextView
            android:id="@+id/black_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уведомления"
            android:textColor="@color/black"
            android:fontFamily="@font/pfbeausanspro_reg"
            android:textSize="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_payments_transfers"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_help"/>
        <TextView
            android:id="@+id/payments_transfers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Помощь"
            android:textColor="@color/black"
            android:fontFamily="@font/pfbeausanspro_reg"
            android:textSize="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>
